@model IEnumerable<ST10252746_CLDV6212_POE_PART3.Models.OrderHistoryViewModel>

<div class="container order-history-container">
    <h2 class="order-history-title">Order History</h2>

    <table class="table order-history-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total Price</th>
                <th>Order Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>R @order.TotalPrice</td>
                    <td>@order.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    /* Background and Container */
    body {
        background-color: #524da0;
        font-family: 'Helvetica', sans-serif;
    }

    .order-history-container {
        max-width: 720px; /* Reduced width to simulate zoom out */
        margin: 40px auto;
        padding: 15px; /* Reduced padding */
        background: linear-gradient(135deg, #531b6a 0%, #531b6a 100%);
        border-radius: 12px; /* Slightly reduced border radius */
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        color: #531b6a;
    }

    /* Title Styling */
    .order-history-title {
        text-align: center;
        font-size: 2.4rem; /* Reduced font size */
        color: #fff;
        margin-bottom: 16px;
        text-shadow: 0 0 4px rgba(255, 255, 255, 0.5);
    }

    /* Table Styling */
    .order-history-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px; /* Reduced row spacing */
        color: #333;
    }

        .order-history-table thead {
            background-color: #2d2697;
            color: #ffffff;
        }

        .order-history-table th {
            padding: 10px; /* Reduced padding */
            font-weight: bold;
            text-align: left;
            font-size: 0.9rem; /* Reduced font size */
            text-shadow: 0 0 4px rgba(255, 255, 255, 0.5);
            border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        }

        .order-history-table tbody tr {
            background-color: #ffffff;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
            border-radius: 8px; /* Reduced radius */
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .order-history-table tbody tr:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .order-history-table td {
            padding: 12px; /* Reduced padding */
            text-align: left;
            font-size: 0.9rem; /* Reduced font size */
            color: black;
            border-bottom: 1px solid #f0f2f5;
        }

        /* Table Row Styling for Card Effect */
        .order-history-table tbody tr td:first-child {
            border-top-left-radius: 8px;
            border-bottom-left-radius: 8px;
        }

        .order-history-table tbody tr td:last-child {
            border-top-right-radius: 8px;
            border-bottom-right-radius: 8px;
        }
</style>
