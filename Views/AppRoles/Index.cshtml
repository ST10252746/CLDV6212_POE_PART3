@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Application Roles";
}
<h1 class="page-title">View Roles</h1>
<p>
    <a asp-action="Create" class="btn-create-role">Create Role</a>
</p>
<table class="table role-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Page Title */
    .page-title {
        font-size: 26px;
        font-weight: bold;
        color: #531b6a;
        text-align: center;
        margin-bottom: 24px;
    }

    /* Create Role Button */
    .btn-create-role {
        display: inline-block;
        padding: 10px 20px;
        background-color: #531b6a;
        color: white;
        font-size: 14px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-create-role:hover {
            background-color: #222268;
        }

    /* Table Styles */
    .role-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 16px;
    }

        .role-table th, .role-table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .role-table th {
            background-color: #f4f4f4;
            color: #531b6a;
        }

        .role-table tbody tr:hover {
            background-color: #f2f2f2;
        }

    /* Validation Messages */
    .text-danger {
        font-size: 12px;
        color: darkred;
    }
</style>
