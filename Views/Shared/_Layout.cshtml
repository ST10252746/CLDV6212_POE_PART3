﻿<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <title>ABC Retail</title>

    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet">

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/slick.css" />

    <link href="~/css/tooplate-little-fashion.css" rel="stylesheet">
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!--

    <!-- Font Awesome-->
    <!--<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    Tooplate 2127 Little Fashion


    https://www.tooplate.com/view/2127-little-fashion

    -->
</head>

<body>

    <section class="preloader">
        <div class="spinner">
            <span class="sk-inner-circle"></span>
        </div>
    </section>
    <header>

        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light fixed-top p-0">
            <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
                <!-- Image element added before the text -->
                <img src="~/images/logo_new.png" alt="ABC Retail Logo" class="navbar-logo">
                <h2 class="m-0 text-primary">ABC Retail</h2>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav me-auto p-4 p-lg-0">
                    <!--Navigation Links for the different Pages-->
                    <a href="/" class="nav-item nav-link">Home</a>
                    @* Role-based navigation links that will display different links based on type of user logged in *@
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Products" class="nav-item nav-link">Inventory List</a>
                        <a href="/Orders/Admin" class="nav-item nav-link">Process Orders</a>
                        <a href="/OrderRequests/" class="nav-item nav-link">View Order Request</a>
                        <a href="/Identity/Account/Register" class="nav-item nav-link">Register Users</a>
                        <a href="/MyWork/Index" class="nav-item nav-link">Purchase Products</a>
                        <a href="/Files/Index" class="nav-item nav-link">Manage Contracts</a>
                    }
                    else if (User.IsInRole("Client"))
                    {
                        <a href="/MyWork/Index" class="nav-item nav-link">Purchase Products</a>
                        <a href="/MyWork/Cart" class="nav-item nav-link">View Cart</a>
                        <a href="/Orders/OrderHistory" class="nav-item nav-link">View My Orders</a>
                        <a href="/Files/Index" class="nav-item nav-link">View Contracts</a>
                    }
                </div>
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
 


    </header>
    <!-- Navbar End -->
    <div class="">
        <main role="main" class="pb-3">
            <!--RenderBody is typically used to render the view content for each specific page. -->
            @RenderBody()
        </main>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">

                <!-- ABC Retail Section -->
                <div class="col-lg-3 col-10 me-auto mb-4">
                    <h4 class="text-white mb-3">
                        ABC Retail</h4>
                    <p class="copyright-text text-muted mt-lg-5 mb-4 mb-lg-0">
                        Copyright © 2024 <strong>ABC Retail</strong>
                    </p>
                    <p class="copyright-text text-muted mt-lg-5 mb-4 mb-lg-0">
                        <strong>Designed by TooPlate HTML Templates</strong>
                    </p>
                </div>

                <!-- Sitemap Section -->
                <div class="col-lg-5 col-8">
                    <h5 class="text-white mb-3">Sitemap</h5>
                    <ul class="footer-menu d-flex flex-wrap">
                        <li class="footer-menu-item">
                            <a class="btn btn-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="footer-menu-item">
                            <a class="btn btn-link" asp-controller="MyWork" asp-action="Index">View Merchandise</a>
                        </li>
                    </ul>
                </div>

                <!-- Social Media Section -->
                <div class="col-lg-3 col-4">
                    <h5 class="text-white mb-3">Social</h5>
                    <ul class="social-icon">
                        <li><a href="#" class="social-icon-link bi-youtube"></a></li>
                        <li><a href="#" class="social-icon-link bi-whatsapp"></a></li>
                        <li><a href="#" class="social-icon-link bi-instagram"></a></li>
                        <li><a href="#" class="social-icon-link bi-skype"></a></li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>

    <!-- JAVASCRIPT FILES -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Headroom.js"></script>
    <script src="~/js/jQuery.headroom.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/custom.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    /* Header Styling */
    header {
        background-color: #ffffff;
    }

        header .navbar-brand h2.m-0.text-primary {
            color: #000000 !important;
            font-family: 'Helvetica', sans-serif;
            font-size: 40px;
        }

    /* Navbar brand alignment */
    .navbar-brand {
        display: flex;
        align-items: center;
    }

    .navbar-logo {
        max-height: 100px;
        margin-right: 10px;
        margin-left: -10px;
    }

    /* Navbar link styling */
    .navbar-nav .nav-link {
        font-family: 'Helvetica', sans-serif;
        font-size: 16px;
        font-weight: bold;
        color: #262459 !important;
        margin-right: 20px; /* Increase spacing between links */
    }

        .navbar-nav .nav-link:hover {
            color: #2d2697 !important;
        }

    /* Move nav links closer to the left */
    .navbar-nav {
        margin-left: -20px; 
    }

    /* Ensure navbar stays at the top and spans the full width */
    .fixed-top {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1030;
    }

    /* Add top margin to page content so it doesn't hide behind the navbar */
    body {
        padding-top: 70px;
    }
</style>
