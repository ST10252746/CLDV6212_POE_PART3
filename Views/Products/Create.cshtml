@model ST10252746_CLDV6212_POE_PART3.Models.Product
<div class="container-product">
    <h1 class="page-title">Create New Product</h1>

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label">Product Name</label>
            <input asp-for="Name" class="form-control form-control-lg" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label">Product Description</label>
            <input asp-for="ProductDescription" class="form-control form-control-lg" />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Price</label>
            <input asp-for="Price" class="form-control form-control-lg" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="control-label">Category</label>
            <select asp-for="Category" class="form-control form-control-lg">
                <option value="">-- Select Category --</option>
                <option value="music collectibles">Music Collectibles</option>
                <option value="clothes">Clothes</option>
                <option value="home">Home Decor</option>
                <option value="fan essentials">Fan Essentials</option>
                <option value="accessories">Accessories</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Availability" class="control-label">Availability</label>
            <input type="checkbox" id="Availability" name="Availability" value="true" />
            <input type="hidden" name="Availability" value="false" />
            <span asp-validation-for="Availability" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="file" class="control-label">Product Image</label>
            <input type="file" class="form-control form-control-lg" name="file" />
            <span asp-validation-for="ImageUrlpath" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <input type="submit" value="Create" class="btn btn-create btn-lg" />
        </div>

        <div class="form-buttons">
            <!-- Back to List Button -->
            <button type="button" class="btn btn-secondary back-button" onclick="window.location.href='@Url.Action("Index", "Products")'">
                <i class="fa fa-reply" aria-hidden="true"></i> Back to List
            </button>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
