@model ST10252746_CLDV6212_POE_PART3.Models.Product
<div class="edit-product">
    <h1>Edit Product</h1>
    <h4>Edit Product Details Below</h4>
    <hr />

    <div class="product-details">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="">-- Select a Category --</option>
                    <option value="music collectibles">Music Collectibles</option>
                    <option value="clothes">Clothes</option>
                    <option value="home decor">Home Decor</option>
                    <option value="fan essentials">Fan Essentials</option>
                    <option value="accessories">Accessories</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Availability" class="control-label"></label>
                <select asp-for="Availability" class="form-control">
                    <option value="True">True</option>
                    <option value="False">False</option>
                </select>
                <span asp-validation-for="Availability" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrlpath" class="control-label">Product Image</label>
                <div>
                    <img src="@Model.ImageUrlpath" alt="Product Image" style="max-width: 200px; max-height: 200px; display: block; margin: 10px 0;" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-edit" />
            </div>
            <div class="form-buttons">
                <!-- Back to List Button -->
                <button type="button" class="btn btn-secondary back-button" onclick="window.location.href='@Url.Action("Index", "Products")'">
                    <i class="fa fa-reply" aria-hidden="true"></i> Back to List
                </button>
            </div>
        </form>
    </div>
</div>

<style>
