@model ST10252746_CLDV6212_POE_PART3.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<div class="delete-container">
    <h1>Delete Product</h1>

    <h3>Are you sure you want to delete this product?</h3>

    <div class="product-details">
        <h4>Product Details</h4>
        <hr />

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductDescription)</th>
                    <td>@Html.DisplayFor(model => model.ProductDescription)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <td>@Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Category)</th>
                    <td>@Html.DisplayFor(model => model.Category)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Availability)</th>
                    <td>
                        @if (Model.Availability.HasValue && Model.Availability.Value)
                        {
                            <p class="available-true">Available</p>
                        }
                        else
                        {
                            <p class="available-false">Out of Stock</p>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Product Image</th>
                    <td><img src="@Model.ImageUrlpath" class="product-image" /></td>
                </tr>
            </tbody>
        </table>
    </div>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" />

        <button type="button" class="btn btn-secondary back-button" onclick="window.location.href='@Url.Action("Index", "Products")'">
            <i class="fa fa-reply" aria-hidden="true"></i> Back to List
        </button>
    </form>

</div>
<style>
    /* General Styling */
    body {
        font-family: 'Helvetica', sans-serif;
        background-color: #524da0;

    }

    /* Centralized Delete Container */
    .delete-container {
        max-width: 640px; /* Adjusted for 80% zoom effect */
        margin: 32px auto;
        padding: 16px;
        background: linear-gradient(135deg, #531b6a 0%, #531b6a 100%);
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
        margin-top: 50px;
    }

        .delete-container:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .delete-container h1 {
            color: red;
            font-size: 2.4rem; /* Reduced font size */
            margin-bottom: 16px;
            text-shadow: 0 0 6px rgba(255, 3, 23, 1);
        }

    .product-details h4 {
        color: white;
        font-size: 1.9rem; /* Reduced font size */
        text-shadow: 0 0 4px rgba(255, 255, 255, 0.5);
        border-bottom: 1px solid #f0f2f5;
    }

    .delete-container h3 {
        font-size: 1.2rem; /* Reduced font size */
        color: black;
        margin-bottom: 24px;
        font-style: italic;
    }

    /* Table Styling */
    table {
        width: 100%;
        margin-bottom: 16px; /* Reduced margin */
        background-color: #f2f2f2;
        border-radius: 8px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
        border-collapse: collapse; /* Ensures borders collapse between cells */
        
    }

    th, td {
        padding: 8px; /* Reduced padding */
        text-align: left;
        border: 1px solid #cccccc;
        font-weight: bold;
        font-size: 0.9rem; /* Reduced font size */
    }

    td {
        color: black;
        font-size: 0.9rem; /* Reduced font size */
        font-weight: bold;
    }

    th {
        color: #2d2697 !important;
        text-shadow: 0 0 4px rgba(74, 0, 134, 1);
        font-size: 1rem;
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .product-image {
        max-width: 160px; /* Reduced max-width */
        margin: 16px auto;
        display: block;
        border-radius: 6px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Availability Status */
    .available-true {
        color: green;
        font-size: 1rem;
        font-weight: bold;
    }

    .available-false {
        color: red;
        font-size: 1rem;
        font-weight: bold;
    }

    /* Form Styling */
    .delete-form {
        margin-top: 16px; /* Reduced margin */
    }

        .delete-form input[type="submit"] {
            padding: 8px 16px; /* Reduced padding */
            font-size: 0.88rem; /* Reduced font size */
            border: none;
            border-radius: 5px;
            background-color: red;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s;
            box-shadow: 0 0 6px rgba(255, 3, 23, 1);
            font-weight: bold;
        }

            .delete-form input[type="submit"]:hover {
                background-color: darkred;
            }

    /* Styling for Back Button */
    .back-button {
        font-size: 0.88rem; /* Reduced font size */
        padding: 8px 16px; /* Reduced padding */
        border-radius: 5px;
        background-color: #0696f2;
        color: white;
        border: none;
        box-shadow: 0 0 8px rgba(0, 153, 255, 0.4);
        transition: background-color 0.3s;
        font-weight: bold;
    }

        .back-button:hover {
            background-color: #1d7cb9;
        }
</style>
