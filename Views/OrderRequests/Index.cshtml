@model IEnumerable<ST10252746_CLDV6212_POE_PART3.Models.OrderRequest>
<div class="container-products">
    <h1 class="orders-title">Order Requests</h1>

    <!-- Filter/Search Form -->
    <form asp-controller="OrderRequests" asp-action="Index" method="get" class="form-inline mb-4 filter-form">
        <div class="form-group d-flex align-items-center mx-sm-3 mb-2">
            <label for="searchString" class="sr-only">Search by Order ID:</label>
            <input type="text" class="form-control form-control-sm" id="searchString" name="searchString" placeholder="Search by Order ID" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary btn-sm ml-2 search-button"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
        </div>
    </form>

    <!-- Order Requests Table -->
    <table class="table order-requests-table">
        <thead>
            <tr>
                <th>Order Request ID</th>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Product Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderRequestId)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.Price)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #524da0;
        font-family: 'Helvetica', sans-serif;
    }

    /* General Styling */
    .container-products {
        max-width: 800px; /* 80% of 1000px */
        margin: 32px auto; /* 40px * 0.8 */
        padding: 20px; /* 25px * 0.8 */
        background: linear-gradient(135deg, #531b6a 0%, #531b6a 100%);
        border-radius: 10px; /* 12px * 0.8 */
        box-shadow: 0 5px 12px rgba(0, 0, 0, 0.2); /* Reduced shadow spread */
        color: #fff;
        margin-top: 32px; /* 40px * 0.8 */
    }

    .orders-title {
        font-size: 2.4rem;
        text-align: center;
        color: #ffffff;
        margin-bottom: 16px; /* 20px * 0.8 */
        text-shadow: 0 0 4px rgba(255, 255, 255, 0.5); /* Reduced shadow spread */
    }

    /* Filter/Search Form Styling */
    .filter-form .form-control-sm {
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    .filter-form .search-button {
        background-color: #2d2697;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 4px 20px; /* 5px 25px reduced */
        width: 144px; /* 180px * 0.8 */
        transition: background-color 0.3s ease;
        text-shadow: 0 0 3px rgba(255, 255, 255, 0.5); /* Reduced shadow spread */
    }

        .filter-form .search-button:hover {
            background-color: #432cd6;
        }

    /* Table Styling */
    .order-requests-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px; /* 15px * 0.8 */
        color: #333;
        margin-top: 16px; /* 20px * 0.8 */
    }

        .order-requests-table thead {
            background-color: #2d2697;
            color: #ffffff;
        }

        .order-requests-table th {
            padding: 11px; /* 14px * 0.8 */
            font-weight: bold;
            font-size: 0.88rem; /* 1.1rem * 0.8 */
            border-bottom: 2px solid rgba(255, 255, 255, 0.3);
            text-shadow: 0 0 2px rgba(255, 255, 255, 0.4); /* Reduced shadow spread */
        }

        .order-requests-table tbody tr {
            background-color: #fff;
            border-radius: 6px; /* 8px * 0.8 */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Reduced shadow spread */
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .order-requests-table tbody tr:hover {
                transform: translateY(-3px); /* Reduced translation */
                box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2); /* Reduced shadow spread */
            }

        .order-requests-table td {
            padding: 12px; /* 14px * 0.8 */
            font-size: 0.9rem; /* 1rem * 0.8 */
            color: black;
            border-bottom: 1px solid #ddd;
        }

        /* Rounded Corners on Row Cells */
        .order-requests-table tbody tr td:first-child {
            border-top-left-radius: 6px; /* 8px * 0.8 */
            border-bottom-left-radius: 6px; /* 8px * 0.8 */
        }

        .order-requests-table tbody tr td:last-child {
            border-top-right-radius: 6px; /* 8px * 0.8 */
            border-bottom-right-radius: 6px; /* 8px * 0.8 */
        }


</style>
