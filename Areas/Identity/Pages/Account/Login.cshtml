        padding: 0 16px; /* Reduced */
        margin-bottom: 24px; /* Reduced */
    }

    /* Login Box */
    .login-box {
        background-color: white;
        padding: 32px 40px; /* Reduced */
        border-radius: 10px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1); /* Slightly reduced */
        max-width: 360px; /* Reduced */
        width: 100%;
        transition: transform 0.3s ease;
    }

        .login-box:hover {
            transform: translateY(-4px); /* Slightly reduced */
