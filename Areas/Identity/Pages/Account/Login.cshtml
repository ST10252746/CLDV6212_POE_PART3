        color: #531b6a;
        margin-left: 8px; /* Reduced */
    }

    /* Form Group */
    .form-group {
        margin-bottom: 16px; /* Reduced */
    }

    .form-label {
        color: #531b6a;
        font-weight: 600;
        font-size: 13px; /* Reduced */
    }

    /* Form Controls */
    .form-control {
        width: 100%;
